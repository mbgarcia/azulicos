<div class='row-fluid'>
	<div class='span4'> </div>
	<div class='span4'>
		<h1><%= t '.title' %></h1>

		<% if @user_session.errors.has_key? :base %>
			<div id="error_explanation">
				<%= @user_session.errors[:base].join(', ') %>
			</div>
		<% end %>

		<%= form_for @user_session, html: {class: "form-signin"} do |f| %>
			<div class="form-group">
				<%= f.label :email %>
				<%= f.text_field :email %>
				<%= error_tag @user_session, :email %>
			</div>

			<div class="form-group">
				<%= f.label :password %>
				<%= f.password_field :password %>
				<%= error_tag @user_session, :password %>
			</div>

			<p>
				<%= f.submit %>
			</p>
		<% end %>

		<p>
			<%= link_to t('.sign_up'), new_user_path, :class => 'app-button' %>
		</p>
	</div>

</div>